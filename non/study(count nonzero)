//Polymorphism
//inheritance
//Encapsulation
//ABSTRACTION : Take what you want of the problem and ignore everything else only implement that one
#include <iostream>
using namespace std;

int main() {
int a[14] = {1,4,3,2,12,14,98,23,30,0,1,2,0};
int i;
int nonZero=0;
int greaterThan10=0;
for(i=0; i<13; i++){
   /* if(a[i] !=0) nonZero++;
    if(a[i] >10) greaterThan10++;*/
   nonZero += !!a[i];
   greaterThan10 += (a[i] > 10); // c++ style!

}

cout << "Number of nonzeros in a is : " << nonZero << endl;
cout << "Val > 10: " << greaterThan10 << endl;
    return 0;
}
